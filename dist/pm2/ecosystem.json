{
  "apps": [
    {
      "name": "pp-http-fork",
      "watch": true,
      "ignore_watch": ["node_modules", "logs", "test", "doc"],
      "script": "../http/src/index.js",
      "instance_var": "INSTANCE_ID",
      "error_file": "../logs/http/err.log",
      "out_file": "../logs/http/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "env": { "NODE_ENV": "development", "NODE_CONFIG_DIR": "../http/config" }
    },
    {
      "name": "pp-http",
      "watch": true,
      "ignore_watch": ["node_modules", "logs", "test", "doc"],
      "script": "../http/src/index.js",
      "instances": "max",
      "exec_mode": "cluster",
      "instance_var": "INSTANCE_ID",
      "error_file": "../logs/http/err.log",
      "out_file": "../logs/http/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "env_production": {
        "NODE_ENV": "production",
        "NODE_CONFIG_DIR": "../http/config"
      }
    },
    {
      "name": "pp-tcp-fork",
      "watch": true,
      "ignore_watch": ["node_modules", "logs", "test", "doc"],
      "script": "../tcp/index.js",
      "instance_var": "INSTANCE_ID",
      "error_file": "../logs/tcp/err.log",
      "out_file": "../logs/tcp/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "env": { "NODE_ENV": "development" }
    },
    {
      "name": "pp-tcp",
      "watch": true,
      "ignore_watch": ["node_modules", "logs", "test", "doc"],
      "script": "../tcp/index.js",
      "instances": "max",
      "exec_mode": "cluster",
      "instance_var": "INSTANCE_ID",
      "error_file": "../logs/tcp/err.log",
      "out_file": "../logs/tcp/out.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "env_production": { "NODE_ENV": "production" }
    }
  ]
}
